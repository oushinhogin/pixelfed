#!/bin/bash

set -e
echo "Running composer install (${COMMIT_ID})"

composer \
    --no-ansi \
    --no-interaction \
    --optimize-autoloader \
    --no-progress \
    --no-dev \
    --profile \
    install

php artisan migrate --no-interaction --no-ansi --force

npm install

rm -rf storage/app/public
ln -s /webroot/storage storage/app/public
tar cjf /webroot/backup.tar.bz2 /webroot/storage/*
mv /webroot/backup.tar.bz2 /webroot/storage

php artisan storage:link
php artisan config:cache
php artisan route:cache
