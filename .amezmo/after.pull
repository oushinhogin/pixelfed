#!/bin/bash

set -e
echo "Running composer install (${COMMIT_ID})"

composer \
    --no-ansi \
    --no-interaction \
    --optimize-autoloader \
    --no-progress \
    --no-dev \
    --profile \
    install

php artisan migrate --no-interaction --no-ansi --force

php artisan storage:link

npm install

mkdir -p /webroot/storage
cp -r -u storage/* /webroot/storage
rm -rf storage
ln -s /webroot/storage storage
