#!/bin/bash

set -e
echo "Running composer install (${COMMIT_ID})"

composer \
    --no-ansi \
    --no-interaction \
    --optimize-autoloader \
    --no-progress \
    --no-dev \
    --profile \
    install

php artisan migrate --no-interaction --no-ansi --force

npm install

rm -rf /webroot/storage
mkdir /webroot/storage
chmod 777 /webroot/storage

ln -s /webroot/storage public/storage
