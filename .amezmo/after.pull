#!/bin/bash

set -e
echo "Running composer install (${COMMIT_ID})"

composer \
    --no-ansi \
    --no-interaction \
    --optimize-autoloader \
    --no-progress \
    --no-dev \
    --profile \
    install

php artisan migrate --no-interaction --no-ansi --force

npm install

chmod -R 0777 /webroot/storage/m

rm -rf storage/app/public
ln -s /webroot/storage storage/app/public

php artisan storage:link
php artisan user:admin josh
php artisan config:cache
php artisan route:cache

ls -l public
ls -l /webroot
ls -l /webroot/storage
ls -l /webroot/storage/avatars
